;; that adheres to `line?`.
(define/contract (parse-line l)
  (-&gt; string? line?)
  ;; TODO TODO TODO 
  'todo)

;; starter code
;; read a file by mapping over its lines  
(define/contract (read-file f)
  (-&gt; string? input-format?)
  (map parse-line (file-&gt;lines f)))

